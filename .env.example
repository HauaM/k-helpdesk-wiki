# Application Configuration
APP_NAME=KHW
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=["*"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/khw
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# VectorStore
VECTORSTORE_TYPE=mock  # Options: mock, pgvector, pinecone, qdrant
VECTORSTORE_DIMENSION=1536

# PGVector (when VECTORSTORE_TYPE=pgvector)
PGVECTOR_TABLE_CONSULTATION=consultation_vectors
PGVECTOR_TABLE_MANUAL=manual_vectors

# LLM Configuration
LLM_PROVIDER=mock  # Options: mock, openai, anthropic, ollama
LLM_MODEL=gpt-4-turbo-preview  # 예: ollama 사용 시 qwen3:4b 또는 gpt-oss:20b
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Ollama
OLLAMA_BASE_URL=http://localhost:11434

# API Keys (required for real LLM providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Queue Configuration (Celery + Redis)
QUEUE_BROKER_URL=redis://localhost:6379/0
QUEUE_RESULT_BACKEND=redis://localhost:6379/1
QUEUE_RETRY_MAX_ATTEMPTS=3
QUEUE_RETRY_BACKOFF_SECONDS=60

# Search Configuration
SEARCH_TOP_K=10
SEARCH_SIMILARITY_THRESHOLD=0.7
SEARCH_TIMEOUT_SECONDS=5

# Manual Review Configuration
MANUAL_SIMILARITY_THRESHOLD=0.85

# Security
SECRET_KEY=changeme-in-production-please-use-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_JSON=false

# ADMIN
ADMIN_ID=admin
ADMIN_PW=1q2w3e4r5t!Q
